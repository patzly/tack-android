<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="20dp">

  <com.google.android.material.divider.MaterialDivider
    android:id="@+id/divider_tempo_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top" />

  <com.google.android.material.divider.MaterialDivider
    android:id="@+id/divider_tempo_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom" />

  <androidx.core.widget.NestedScrollView
    android:id="@+id/scroll_tempo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
      android:id="@+id/linear_tempo_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingStart="24dp"
      android:paddingEnd="24dp"
      android:paddingTop="16dp"
      android:paddingBottom="16dp">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@drawable/ripple_list_item_bg_segmented_first">

        <HorizontalScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scrollbars="none"
          android:overScrollMode="ifContentScrolls"
          tools:ignore="UselessParent">

          <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggle_tempo_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
              android:id="@+id/button_tempo_keyboard"
              style="@style/Widget.Tack.Button"
              android:text="@string/label_tempo_keyboard"
              app:icon="@drawable/ic_rounded_keyboard" />

            <com.google.android.material.button.MaterialButton
              android:id="@+id/button_tempo_tap"
              style="@style/Widget.Tack.Button"
              android:text="@string/label_tempo_tap"
              app:icon="@drawable/ic_rounded_touch_app_anim" />

          </com.google.android.material.button.MaterialButtonToggleGroup>

        </HorizontalScrollView>

      </FrameLayout>

      <FrameLayout
        android:id="@+id/frame_tempo_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_list_item_bg_segmented_last">

        <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/text_input_tempo"
          style="@style/Widget.Tack.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:layout_marginTop="12dp"
          android:layout_marginBottom="4dp"
          android:hint="@string/label_bpm"
          app:helperText="@string/label_tempo_input_help"
          app:boxCornerRadiusTopStart="8dp"
          app:boxCornerRadiusTopEnd="8dp"
          app:boxCornerRadiusBottomStart="8dp"
          app:boxCornerRadiusBottomEnd="8dp">

          <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

      </FrameLayout>

      <LinearLayout
        android:id="@+id/linear_tempo_instant"
        style="@style/Widget.Tack.LinearLayout.ListItem.SingleLine.Segmented"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/ripple_list_item_bg_segmented_middle">

        <LinearLayout style="@style/Widget.Tack.LinearLayout.ListItem.TextBox.Stretch">

          <TextView
            android:id="@+id/text_tempo_instant"
            style="@style/Widget.Tack.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_tempo_instant" />

        </LinearLayout>

        <com.google.android.material.materialswitch.MaterialSwitch
          android:id="@+id/switch_tempo_instant"
          style="@style/Widget.Tack.Switch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      </LinearLayout>

      <FrameLayout
        android:id="@+id/frame_tempo_tap_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/ripple_list_item_bg_segmented_last">

        <xyz.zedler.patrick.tack.view.TempoTapView
          android:id="@+id/tempo_tap_tempo"
          android:layout_width="@dimen/tempo_tap_size"
          android:layout_height="@dimen/tempo_tap_size"
          android:layout_gravity="center" />

        <FrameLayout
          android:id="@+id/frame_tempo_tap_tempo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          tools:ignore="SpUsage">

          <TextSwitcher
            android:id="@+id/text_switcher_tempo_tap_tempo_term"
            android:layout_width="@dimen/tempo_tap_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top" />

          <TextView
            android:id="@+id/text_tempo_tap_tempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/label_text_size"
            android:layout_marginBottom="@dimen/label_text_size"
            android:textColor="?attr/colorOnTertiaryContainer"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:fontFeatureSettings="tnum"
            android:textAppearance="?attr/textAppearanceDisplayLarge"
            android:textSize="@dimen/tempo_tap_bpm_text_size" />

          <TextView
            style="@style/Widget.Tack.TextView.LabelLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_bpm"
            android:textColor="?attr/colorOnTertiaryContainer"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textSize="@dimen/tempo_tap_label_text_size" />

        </FrameLayout>

        <TextView
          android:id="@+id/text_tempo_placeholder"
          style="@style/Widget.Tack.TextView.LabelLarge"
          android:layout_width="@dimen/tempo_tap_size"
          android:layout_height="wrap_content"
          android:textColor="?attr/colorOnTertiaryContainer"
          android:layout_gravity="center"
          android:gravity="center_horizontal"
          android:textAlignment="center"
          android:text="@string/action_tempo_tap"/>

      </FrameLayout>

    </LinearLayout>

  </androidx.core.widget.NestedScrollView>

</FrameLayout>