<selector
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- State Disabled, Unchecked -->
  <item
    android:alpha="@dimen/m3_comp_switch_disabled_unselected_icon_opacity"
    android:color="@macro/m3_comp_switch_disabled_unselected_icon_color"
    android:state_enabled="false"
    android:state_checked="false"
    tools:ignore="PrivateResource" />

  <!-- State Disabled, Checked -->
  <item
    android:alpha="@dimen/m3_comp_switch_disabled_selected_icon_opacity"
    android:color="@macro/m3_comp_switch_disabled_selected_icon_color"
    android:state_enabled="false"
    android:state_checked="true"
    tools:ignore="PrivateResource" />

  <!-- State Checked -->
  <!-- Fix for bug in MDC Android (based on 1.14.0-alpha04) -->
  <!-- colorPrimary instead of colorOnPrimaryContainer for always correct contrast -->
  <item
    android:color="?attr/colorPrimary"
    android:state_checked="true" />

  <!-- State Unchecked -->
  <item
    android:color="@macro/m3_comp_switch_unselected_hover_icon_color"
    android:state_hovered="true"
    android:state_checked="false" />
  <item
    android:color="@macro/m3_comp_switch_unselected_focus_icon_color"
    android:state_focused="true"
    android:state_checked="false" />
  <item
    android:color="@macro/m3_comp_switch_unselected_pressed_icon_color"
    android:state_pressed="true"
    android:state_checked="false" />
  <item
    android:color="@macro/m3_comp_switch_unselected_icon_color"
    android:state_checked="false" />

</selector>
